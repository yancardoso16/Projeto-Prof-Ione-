#include <stdio.h>

int main() {
    char titulo[100];
    char descricao[1000];
    int prioridade;
    int prazo;

    printf("=== Etapa 2: Analise de Tarefa ---\n");

    printf("Digite o titulo: ");
    scanf(" %[^\n]", titulo);

    printf("Digite a descricao: ");
    scanf(" %[^\n]", descricao);

    printf("Prioridade (1-baixa, 2-media, 3-alta): ");
    scanf("%d", &prioridade);

    printf("Qual e o prazo em dias: ");
    scanf("%d", &prazo);

    printf("\n--- Analise da Tarefa: %s ---\n", titulo);

    if (prazo <= 0) {
        printf("PRAZO: Tarefa VENCIDA!\n");
    } else {
        printf("PRAZO: Voce tem %d dias.\n", prazo);
    }

    switch (prioridade) {
        case 1:
            printf("PRIORIDADE: Baixa\n");
            break;
        case 2:
            printf("PRIORIDADE: Media\n");
            break;
        case 3:
            printf("PRIORIDADE: Alta\n");
            break;
        default:
            printf("PRIORIDADE: Valor invalido.\n");
            break;
    }

    return 0;
}
